user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    server {
        listen {{ nginx_port }} default_server;
        server_name {{ nginx_server_name }};

        location / {
            root /usr/share/nginx/html;
            index index.html;
        }
    }
}